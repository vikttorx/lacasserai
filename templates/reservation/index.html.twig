{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Creation_date</th>
                <th>Arrival_date</th>
                <th>Departure_time</th>
                <th>Adults</th>
                <th>Children</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.CreationDate ? reservation.CreationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.ArrivalDate ? reservation.ArrivalDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.DepartureTime ? reservation.DepartureTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.Adults }}</td>
                <td>{{ reservation.Children }}</td>
                <td>
                    <a href="{{ path('reservation_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reservation_new') }}">Create new</a>


{% endblock %}
